{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "ignoreCommand": "git diff HEAD^ HEAD --quiet -- . ':!server' ':!*.md'",
  "functions": {
    "api/[...path].js": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/index.html",
      "dest": "/index.html",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate",
        "Pragma": "no-cache",
        "Expires": "0"
      }
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/[...path].js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(sw\\.js|workbox-.*\\.js|manifest\\.webmanifest)",
      "dest": "/$1",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate",
        "Service-Worker-Allowed": "/"
      }
    },
    {
      "src": "/(pwa-.*\\.png|favicon\\.ico|apple-touch-icon\\.png|mask-icon\\.svg)",
      "dest": "/$1",
      "headers": {
        "Cache-Control": "public, max-age=86400"
      }
    },
    {
      "src": "/(.*)\\.js$",
      "dest": "/$1.js",
      "headers": {
        "Content-Type": "application/javascript; charset=utf-8"
      }
    },
    {
      "src": "/(.*)\\.css$",
      "dest": "/$1.css",
      "headers": {
        "Content-Type": "text/css; charset=utf-8"
      }
    },
    {
      "src": "/(.*)\\.json$",
      "dest": "/$1.json",
      "headers": {
        "Content-Type": "application/json; charset=utf-8"
      }
    },
    {
      "src": "/(.*)\\.png$",
      "dest": "/$1.png",
      "headers": {
        "Content-Type": "image/png"
      }
    },
    {
      "src": "/(.*)\\.svg$",
      "dest": "/$1.svg",
      "headers": {
        "Content-Type": "image/svg+xml"
      }
    },
    {
      "src": "/(.*)\\.wasm$",
      "dest": "/$1.wasm",
      "headers": {
        "Content-Type": "application/wasm"
      }
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "headers": {
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block",
        "Strict-Transport-Security": "max-age=31536000; includeSubDomains; preload",
        "Referrer-Policy": "strict-origin-when-cross-origin",
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VITE_API_URL": "/api",
    "VITE_API_FALLBACK_URL": "https://thequizplatform.vercel.app/api",
    "VITE_API_TIMEOUT": "10000",
    "VITE_API_RETRY_ATTEMPTS": "3",
    "VITE_API_RETRY_DELAY": "1000",
    "VITE_API_RETRY_BACKOFF": "2",
    "VITE_API_HEALTH_CHECK_INTERVAL": "30000",
    "KOYEB_API_URL": "https://profitable-starr-mohamedtarek-27df73a5.koyeb.app/api"
  }
}