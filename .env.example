# MongoDB Database (REQUIRED)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/quizplatform

# JWT Secret (REQUIRED - generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your_super_secret_jwt_key_min_32_characters

# Groq API (REQUIRED for AI features - get from https://console.groq.com)
GROQ_API_KEY=gsk_your_groq_api_key_here

# Google OAuth (OPTIONAL - get from https://console.cloud.google.com)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Application URL (Set to your deployment URL)
CLIENT_URL=http://localhost:7860

# Server Configuration
PORT=7860
NODE_ENV=production
